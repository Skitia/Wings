IF
    Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    ChangeEnemyAlly(Myself,CONTROLLED)
END

IF
    Dead("AERIE")
THEN
  RESPONSE #100
    SetGlobal("B2#AmmlSum","GLOBAL",2)
    DestroySelf()
END

IF
    Global("B2#AerieEnemy1","GLOBAL",6)
THEN
  RESPONSE #100
    SetGlobal("B2#AmmlSum","GLOBAL",0)
    DestroySelf()
END